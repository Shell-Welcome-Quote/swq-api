{
  "name": "nest-typescript-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "build:prod": "npm run build",
    "lint": "eslint --ext .js,.ts src/**",
    "lint:fix": "npm run lint -- --fix",
    "pre-push": "npm run lint && npm run test && npm run build:prod && npm run tpl-repo:check",
    "prebuild": "rimraf dist",
    "preinstall": "node ./tools/check-yarn.js",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:prod": "node dist/main.js",
    "test": "jest --config jest.config.js",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.config.js",
    "test:watch": "npm run test -- --watch",
    "tpl-repo": "tools/merge-with-repository-template.sh",
    "tpl-repo:check": "npm run tpl-repo -- check",
    "tpl-repo:merge": "npm run tpl-repo -- merge"
  },
  "dependencies": {
    "@nestjs/common": "~6.8.0",
    "@nestjs/core": "~6.8.0",
    "@nestjs/platform-express": "~6.8.0",
    "module-alias": "~2.2.2",
    "reflect-metadata": "~0.1.13",
    "rimraf": "~3.0.0",
    "rxjs": "~6.5.3"
  },
  "devDependencies": {
    "@nestjs/cli": "~6.10.2",
    "@nestjs/schematics": "~6.7.0",
    "@nestjs/testing": "~6.8.0",
    "@types/express": "~4.17.1",
    "@types/jest": "~24.0.18",
    "@types/node": "~12.7.8",
    "@types/supertest": "~2.0.8",
    "@typescript-eslint/eslint-plugin": "~2.3.3",
    "@typescript-eslint/parser": "~2.3.3",
    "eslint": "~6.5.1",
    "eslint-config-airbnb-base": "~14.0.0",
    "eslint-import-resolver-typescript": "~2.0.0",
    "eslint-plugin-filenames": "~1.3.2",
    "eslint-plugin-import": "~2.18.2",
    "eslint-plugin-promise": "~4.2.1",
    "eslint-plugin-unicorn": "~12.1.0",
    "husky": "~3.0.8",
    "jest": "~24.9.0",
    "supertest": "~4.0.2",
    "ts-jest": "~24.1.0",
    "ts-loader": "~6.2.0",
    "ts-node": "~8.4.1",
    "tsconfig-paths": "~3.9.0",
    "typescript": "~3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run pre-push",
      "post-merge": "IS_YARN=true yarn install"
    }
  },
  "_moduleAliases": {
    "@app": "./dist/app"
  }
}
